<% c++ #include <radiorandom/model/generic/model.hpp> %>
<% skin html %>
<% view generic uses content::generic %>

<% template sub_navigation() %>
<% end template %>

<% template navigation() %>
    <% if is_installed %>
        <div>
            <a href="<% url "/"     %>">Index</a>
            <a href="<% url "/user" %>">Users</a>
            <a href="<% url "/post" %>">Posts</a>
        </div>
        <% include sub_navigation() %>
    <% end %>
<% end template %>

<% template head_content() %>
<% end template %>

<% template body_content() %>
<% end template %>

<% template header() %>
    <% include navigation() %>
<% end template%>

<% template footer() %>
<% end template %>

<% template render() %>
<html>
    <head>
        <% include head_content() %>
    </head>
    <body>
        <% include header() %>
        <% include body_content() %>
        <% include footer() %>
    </body>
</html>
<% end template %>

<% end view %>
<% end skin %>
