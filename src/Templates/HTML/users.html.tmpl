<% c++ #include "radiorandom.h" %>
<% xhtml %>
<% skin html %>
<% view html_users uses radiorandom::users extends html_master %>
<% template body() %>
	<table class="fullwidth">
		<tr>
				<th><a href="?sortby=username&amp;direction=<% sort_username_dir %><% suffix %>">Username</a></th>
				<th><a href="?sortby=score&amp;direction=<% sort_score_dir %><% suffix %>">Score</a></th>
				<th><a href="?sortby=access&amp;direction=<% sort_access_dir %><% suffix %>">Access</a></th>
				<th><a href="?sortby=joined&amp;direction=<% sort_joined_dir %><% suffix %>">Joined</a></th>
		</tr>
			<% foreach user in usersset %>
			<% item %>
		<tr>
				<td><a href="/users/<% user.id %>"><% user.username %></a></td>
				<td><% user.score %></td>
				<td><% user.access %></td>
				<td><% user.joined | ext time_passed %></td>
		</tr>
		<% end %>
		<% end %>
	</table>

<% end %>
<% template footer() %>	
		<div class="navigation">
			<% if many %>
				<% page | ext navigation_gen %>
			<% end %>
		</div>
<% end %>
<% end view %>
<% end skin %>
